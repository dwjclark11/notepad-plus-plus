  <url type="vcs-browser">https://github.com/notepad-plus-plus/notepad-plus-plus</url>

  <developer_name>Don Ho</developer_name>
  <update_contact>don.h@free.fr</update_contact>

  <content_rating type="oars-1.1" />

  <releases>
    <release version="8.6.0" date="2024-01-01">
      <description>
        <p>Linux port with Qt6 interface</p>
